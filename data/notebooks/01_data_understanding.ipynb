# 1. Импорт библиотек
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import warnings
warnings.filterwarnings('ignore')

# 2. Загрузка данных
df = pd.read_csv('../data/titanic.csv')
print("=== ПАСПОРТ ДАТАСЕТА ===")
print(f"Размер: {df.shape[0]} строк, {df.shape[1]} столбцов")
print("\nТипы данных:")
print(df.dtypes)
print("\nПервые 5 строк:")
display(df.head())

# 3. Преобразование типов
df['Survived'] = df['Survived'].astype('category')
df['Pclass'] = df['Pclass'].astype('category')
df['Sex'] = df['Sex'].astype('category')
df['Embarked'] = df['Embarked'].astype('category')

print("\n=== АУДИТ КАЧЕСТВА ===")

# 3.1. Пропуски
print("1. Пропуски:")
missing = df.isnull().sum()
missing_percent = (missing / len(df)) * 100
missing_df = pd.DataFrame({
    'Пропущено': missing,
    'Процент': missing_percent
})
print(missing_df[missing_df['Пропущено'] > 0])

# 3.2. Дубликаты
print(f"\n2. Полных дубликатов: {df.duplicated().sum()}")

# 3.3. Статистики
print("\n3. Статистики числовых признаков:")
print(df.describe())

# 3.4. Выбросы в Fare
print("\n4. Выбросы в Fare (IQR метод):")
Q1 = df['Fare'].quantile(0.25)
Q3 = df['Fare'].quantile(0.75)
IQR = Q3 - Q1
lower = Q1 - 1.5 * IQR
upper = Q3 + 1.5 * IQR
outliers = df[(df['Fare'] < lower) | (df['Fare'] > upper)]
print(f"Выбросов: {len(outliers)}")

# График выбросов
plt.figure(figsize=(8,4))
sns.boxplot(x=df['Fare'])
plt.title('Выбросы в стоимости билета (Fare)')
plt.savefig('../report/fare_outliers.png')
plt.show()

# 4. ВИЗУАЛИЗАЦИИ
print("\n=== РАЗВЕДОЧНЫЙ АНАЛИЗ ===")

# 4.1. Распределение возраста
plt.figure(figsize=(10,5))
sns.histplot(df['Age'].dropna(), kde=True, bins=30)
plt.title('Распределение возраста пассажиров')
plt.xlabel('Возраст')
plt.ylabel('Частота')
plt.savefig('../report/age_distribution.png')
plt.show()

# 4.2. Количество по полу
plt.figure(figsize=(6,4))
df['Sex'].value_counts().plot(kind='bar')
plt.title('Распределение по полу')
plt.xlabel('Пол')
plt.ylabel('Количество')
plt.savefig('../report/sex_distribution.png')
plt.show()

# 4.3. Возраст vs Стоимость билета
plt.figure(figsize=(10,6))
sns.scatterplot(x='Age', y='Fare', hue='Survived', data=df, alpha=0.7)
plt.title('Зависимость: Возраст vs Стоимость билета')
plt.xlabel('Возраст')
plt.ylabel('Стоимость билета')
plt.legend(title='Выжил')
plt.savefig('../report/age_vs_fare.png')
plt.show()

print("\n=== АНАЛИЗ ЗАВЕРШЁН ===")
