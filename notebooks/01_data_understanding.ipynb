# --- 1. Импорт библиотек ---
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import warnings
warnings.filterwarnings('ignore')

# Настройка отображения графиков
%matplotlib inline
plt.style.use('seaborn-v0_8-darkgrid')
sns.set_palette("husl")

# --- 2. Загрузка данных ---
df = pd.read_csv('../data/titanic.csv')
print("=" * 60)
print("ПАСПОРТ ДАТАСЕТА")
print("=" * 60)
print(f"Размер датасета: {df.shape[0]} строк, {df.shape[1]} столбцов")
print("\nТипы данных:")
print(df.dtypes)
print("\nПервые 5 строк:")
display(df.head())

# --- 3. Преобразование типов данных ---
print("\n" + "=" * 60)
print("ПРЕОБРАЗОВАНИЕ ТИПОВ ДАННЫХ")
print("=" * 60)

# Преобразуем в категориальные типы
categorical_cols = ['Survived', 'Pclass', 'Sex', 'Embarked']
for col in categorical_cols:
    if col in df.columns:
        df[col] = df[col].astype('category')
        print(f"{col} -> категориальный")

print("\nОбновлённые типы данных:")
print(df.dtypes)

# --- 4. АУДИТ КАЧЕСТВА ДАННЫХ ---
print("\n" + "=" * 60)
print("АУДИТ КАЧЕСТВА ДАННЫХ")
print("=" * 60)

# 4.1. Пропуски (Missing Values)
print("\n--- 4.1. ПРОПУСКИ ---")
missing = df.isnull().sum()
missing_percent = (missing / len(df)) * 100
missing_df = pd.DataFrame({
    'Пропущено': missing,
    'Процент, %': missing_percent.round(2)
})
print("Количество пропусков по столбцам:")
print(missing_df[missing_df['Пропущено'] > 0])

# Выделяем самые проблемные признаки
problematic_cols = missing_df[missing_df['Процент, %'] > 20].index.tolist()
if problematic_cols:
    print(f"\nНаиболее проблемные признаки (>20% пропусков): {problematic_cols}")

# 4.2. Дубликаты
print("\n--- 4.2. ДУБЛИКАТЫ ---")
full_duplicates = df.duplicated().sum()
print(f"Полных дубликатов строк: {full_duplicates}")

# Проверка дубликатов по PassengerId (уникальный идентификатор)
if 'PassengerId' in df.columns:
    id_duplicates = df['PassengerId'].duplicated().sum()
    print(f"Дубликатов PassengerId: {id_duplicates}")

# 4.3. Статистики и проверка значений
print("\n--- 4.3. СТАТИСТИКИ ЧИСЛОВЫХ ПРИЗНАКОВ ---")
numeric_cols = df.select_dtypes(include=[np.number]).columns
if len(numeric_cols) > 0:
    print("Основные статистики:")
    print(df[numeric_cols].describe().round(2))
    
    # Проверка на невозможные значения
    print("\nПроверка на аномальные значения:")
    if 'Age' in df.columns:
        negative_age = (df['Age'] < 0).sum()
        too_old = (df['Age'] > 100).sum()
        print(f"Возраст < 0: {negative_age}")
        print(f"Возраст > 100: {too_old}")
    
    if 'Fare' in df.columns:
        negative_fare = (df['Fare'] < 0).sum()
        print(f"Стоимость билета < 0: {negative_fare}")
else:
    print("Числовые признаки не найдены")

# 4.4. Категориальные признаки
print("\n--- 4.4. КАТЕГОРИАЛЬНЫЕ ПРИЗНАКИ ---")
categorical_cols = df.select_dtypes(include=['category', 'object']).columns
if len(categorical_cols) > 0:
    for col in categorical_cols:
        unique_count = df[col].nunique()
        print(f"{col}: {unique_count} уникальных значений")
        
        # Проверка на "грязные" категории (первые 5 значений)
        if df[col].dtype == 'object':
            samples = df[col].dropna().unique()[:5]
            print(f"  Примеры: {samples[:3]}...")
else:
    print("Категориальные признаки не найдены")

# 4.5. Выбросы (Outliers)
print("\n--- 4.5. ВЫБРОСЫ В ПРИЗНАКЕ Fare ---")
if 'Fare' in df.columns:
    # Метод межквартильного размаха (IQR)
    Q1 = df['Fare'].quantile(0.25)
    Q3 = df['Fare'].quantile(0.75)
    IQR = Q3 - Q1
    lower_bound = Q1 - 1.5 * IQR
    upper_bound = Q3 + 1.5 * IQR
    
    outliers = df[(df['Fare'] < lower_bound) | (df['Fare'] > upper_bound)]
    print(f"Нижняя граница: {lower_bound:.2f}")
    print(f"Верхняя граница: {upper_bound:.2f}")
    print(f"Найдено выбросов: {len(outliers)} ({len(outliers)/len(df)*100:.1f}%)")
    
    # Визуализация выбросов
    plt.figure(figsize=(10, 4))
    plt.subplot(1, 2, 1)
    sns.boxplot(y=df['Fare'])
    plt.title('Boxplot: Стоимость билета (Fare)')
    plt.ylabel('Fare')
    
    plt.subplot(1, 2, 2)
    sns.histplot(df['Fare'], kde=True, bins=50)
    plt.axvline(upper_bound, color='red', linestyle='--', label=f'Upper: {upper_bound:.1f}')
    plt.axvline(lower_bound, color='green', linestyle='--', label=f'Lower: {lower_bound:.1f}')
    plt.title('Распределение Fare с границами выбросов')
    plt.xlabel('Fare')
    plt.ylabel('Частота')
    plt.legend()
    
    plt.tight_layout()
    plt.savefig('../report/fare_outliers.png', dpi=100, bbox_inches='tight')
    plt.show()
    
    # Покажем несколько выбросов
    if len(outliers) > 0:
        print("\nПримеры выбросов (первые 5):")
        print(outliers[['PassengerId', 'Name', 'Fare', 'Pclass']].head())
else:
    print("Признак Fare не найден в датасете")

# --- 5. РАЗВЕДОЧНЫЙ АНАЛИЗ (EDA) ---
print("\n" + "=" * 60)
print("РАЗВЕДОЧНЫЙ АНАЛИЗ (EDA)")
print("=" * 60)

# 5.1. Распределение возраста
print("\n--- 5.1. РАСПРЕДЕЛЕНИЕ ВОЗРАСТА ---")
if 'Age' in df.columns:
    plt.figure(figsize=(10, 5))
    
    # Гистограмма с KDE
    sns.histplot(df['Age'].dropna(), kde=True, bins=30, color='skyblue')
    plt.title('Распределение возраста пассажиров', fontsize=14)
    plt.xlabel('Возраст (лет)', fontsize=12)
    plt.ylabel('Количество пассажиров', fontsize=12)
    plt.grid(True, alpha=0.3)
    
    # Добавим вертикальную линию на среднее значение
    mean_age = df['Age'].mean()
    plt.axvline(mean_age, color='red', linestyle='--', 
                label=f'Средний возраст: {mean_age:.1f} лет')
    plt.legend()
    
    plt.savefig('../report/age_distribution.png', dpi=100, bbox_inches='tight')
    plt.show()
    
    print(f"Средний возраст: {mean_age:.1f} лет")
    print(f"Медианный возраст: {df['Age'].median():.1f} лет")
    print(f"Минимальный возраст: {df['Age'].min():.1f} лет")
    print(f"Максимальный возраст: {df['Age'].max():.1f} лет")
else:
    print("Признак Age не найден")

# 5.2. Распределение по полу
print("\n--- 5.2. РАСПРЕДЕЛЕНИЕ ПО ПОЛУ ---")
if 'Sex' in df.columns:
    plt.figure(figsize=(8, 5))
    
    # Столбчатая диаграмма
    sex_counts = df['Sex'].value_counts()
    colors = ['lightcoral', 'lightblue']
    
    bars = plt.bar(sex_counts.index, sex_counts.values, color=colors, edgecolor='black')
    plt.title('Распределение пассажиров по полу', fontsize=14)
    plt.xlabel('Пол', fontsize=12)
    plt.ylabel('Количество пассажиров', fontsize=12)
    
    # Добавим значения на столбцы
    for bar in bars:
        height = bar.get_height()
        plt.text(bar.get_x() + bar.get_width()/2., height + 5,
                f'{int(height)}', ha='center', va='bottom')
    
    plt.grid(True, axis='y', alpha=0.3)
    plt.savefig('../report/sex_distribution.png', dpi=100, bbox_inches='tight')
    plt.show()
    
    print("Количество по полу:")
    for sex, count in sex_counts.items():
        percentage = count / len(df) * 100
        print(f"  {sex}: {count} пассажиров ({percentage:.1f}%)")
else:
    print("Признак Sex не найден")

# 5.3. Зависимость между возрастом и стоимостью билета
print("\n--- 5.3. ВОЗРАСТ VS СТОИМОСТЬ БИЛЕТА ---")
if 'Age' in df.columns and 'Fare' in df.columns:
    plt.figure(figsize=(10, 6))
    
    # Точечная диаграмма с разделением по выживанию
    scatter = sns.scatterplot(x='Age', y='Fare', hue='Survived', 
                             data=df, alpha=0.6, palette='viridis', 
                             size='Fare', sizes=(20, 200))
    
    plt.title('Зависимость: Возраст vs Стоимость билета', fontsize=14)
    plt.xlabel('Возраст (лет)', fontsize=12)
    plt.ylabel('Стоимость билета ($)', fontsize=12)
    
    # Легенда
    handles, labels = scatter.get_legend_handles_labels()
    plt.legend(handles[:2], ['Не выжил', 'Выжил'], title='Выживание', 
               loc='upper right')
    
    plt.grid(True, alpha=0.3)
    plt.savefig('../report/age_vs_fare.png', dpi=100, bbox_inches='tight')
    plt.show()
    
    # Вычислим корреляцию
    correlation = df[['Age', 'Fare']].corr().iloc[0, 1]
    print(f"Корреляция между возрастом и стоимостью билета: {correlation:.3f}")
    
    if correlation > 0.3:
        print("  → Наблюдается умеренная положительная корреляция")
    elif correlation < -0.3:
        print("  → Наблюдается умеренная отрицательная корреляция")
    else:
        print("  → Корреляция слабая или отсутствует")
else:
    print("Недостаточно данных для анализа зависимости")

# 5.4. Дополнительная визуализация: выживаемость по классам
print("\n--- 5.4. ВЫЖИВАЕМОСТЬ ПО КЛАССАМ ---")
if 'Pclass' in df.columns and 'Survived' in df.columns:
    plt.figure(figsize=(8, 5))
    
    # Группировка данных
    survival_by_class = df.groupby('Pclass')['Survived'].mean() * 100
    
    bars = plt.bar(survival_by_class.index.astype(str), 
                   survival_by_class.values, 
                   color=['gold', 'silver', 'brown'], 
                   edgecolor='black')
    
    plt.title('Процент выживших по классам кают', fontsize=14)
    plt.xlabel('Класс каюты', fontsize=12)
    plt.ylabel('Процент выживших (%)', fontsize=12)
    plt.ylim(0, 100)
    
    # Добавим значения на столбцы
    for bar in bars:
        height = bar.get_height()
        plt.text(bar.get_x() + bar.get_width()/2., height + 2,
                f'{height:.1f}%', ha='center', va='bottom')
    
    plt.grid(True, axis='y', alpha=0.3)
    plt.savefig('../report/survival_by_class.png', dpi=100, bbox_inches='tight')
    plt.show()
    
    print("Процент выживших по классам:")
    for pclass, percentage in survival_by_class.items():
        print(f"  Класс {pclass}: {percentage:.1f}%")
else:
    print("Недостаточно данных для анализа выживаемости")

